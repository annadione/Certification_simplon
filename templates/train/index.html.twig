{% extends 'base.html.twig' %}

{% block title %}Train index{% endblock %}

{% block body %}
    <h1>Liste des trains</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero_train</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for train in trains %}
            <tr>
                <td>{{ train.id }}</td>
                <td>{{ train.numeroTrain }}</td>
                <td>
                    <a href="{{ path('train_show', {'id': train.id}) }}">show</a>
                    <a href="{{ path('train_edit', {'id': train.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('train_new') }}">Ajouter un nouveau train</a>
{% endblock %}
